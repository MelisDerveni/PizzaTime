@model LoginUser
<div class="nav-bar">
    <div class="row">
        <div class="d-flex justify-content-between">
            <h1>Pizza Ninja's</h1>
            <a href="/Register">Don't Have an Account? Register</a>
        </div>
    </div>
</div>

<form action="/Login" method="post" class="col-sm-5 Regform">

    <div class="form-outline mb-4">
        <input type="email" asp-for="Email" id="form3Example1cg" class="form-control form-control-lg" />
        <label class="form-label" asp-for="Email" for="form3Example1cg">Email</label>
        <span asp-validation-for="Email"></span>
    </div>

    <div class="form-outline mb-4">
        <input type="password" asp-for="Password" id="form3Example1cg" class="form-control form-control-lg" />
        <label class="form-label" asp-for="Password" for="form3Example1cg">Password</label>
        <span asp-validation-for="Password"></span>
    </div>

    <button type="submit" class="btn btn-success btn-block btn-lg form-control ">Sign Up</button>

</form>